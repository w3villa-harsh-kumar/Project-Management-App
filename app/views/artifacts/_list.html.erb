<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Key</th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody>
        <% artifacts.each do |artifact| %>
            <tr>
                <td class="align-middle"><%= link_to artifact.name, artifact_path(artifact), class: 'main-link' %></td>
                <td class="align-middle"><%= s3_link current_tenant.id, artifact.key %></td>
                <td class="align-middle">
                    <%= button_to 'Destroy', artifact_path(artifact), method: :delete, class: 'btn btn-xs btn-danger'%>
                    <%# link_to t('.destroy', :default => t("helpers.links.destroy")),
                                artifact_path(artifact),
                                :method => :delete,
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                :class => 'btn btn-xs btn-danger' %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Artifact', new_artifact_path(project_id: @project.id), class: 'btn btn-primary' %>