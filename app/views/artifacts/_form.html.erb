<%= form_with(model: artifact) do |form| %>
  <% if artifact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>

      <ul>
        <% artifact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= form.label :name, style: "display: block", class: "control-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="control-group">
    <%= form.label :upload, value: 'File to upload', style: "display: block", class: "control-label" %>
    <%= form.file_field :upload, class: "form-control" %>
  </div>

  <%= form.hidden_field :project_id %>

  <div class="mt-2">
    <%= form.submit nil, class: "btn btn-primary" %>
    <%= link_to 'Cancel', tenant_project_path(tenant_id: current_tenant.id, id: @artifact.project_id), class: 'btn btn-outline-primary' %>
  </div>
<% end %>
